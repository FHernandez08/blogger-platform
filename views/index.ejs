<%- include("partials/header.ejs") %>

<% if (locals.firstName && locals.lastName) { %>
    <h1>
        Welcome, 
        <%= firstName %>
        <%= lastName %>
        !
    </h1>
    <% } else { %>
        <h1>Welcome to the blog website!</h1>
        <p>Enter your login or create an account!</p>
        <% } %>

<form action="login" method="post" >
    <h3 id="login-title">Welcome back!</h3>
    <div id="details">
        <div id="email-login">
            <label for="email-cred">Email:</label>
            <input type="email" name="email-cred" id="email-cred" required>
        </div>
        <div id="password-login">
            <label for="pass-cred">Password:</label>
            <input type="password" name="email-cred" id="email-cred" required>
        </div>
    </div>
    <div id="buttons-login">
        <button type="reset">Clear</button>
        <button type="submit">Sign In</button>
    </div>
</form>

<form action="register" method="post">
    <h3 id="register-title">Register</h3>
    <p>Enter the following details to create your account!</p>
    <div id="register-details">
        <div id="register-first">
            <label for="first-name">First Name:</label>
            <input type="text" name="first-name" id="first-name">
        </div>
        <div id="register-last">
            <label for="last-name">Last Name:</label>
            <input type="text" name="last-name" id="last-name">
        </div>
        <div id="register-email">
            <label for="email-cred-register">Email:</label>
            <input type="email" name="email" id="email-cred-register" required>
        </div>
        <div id="register-password">
            <label for="pass-cred-register">Password:</label>
            <input type="password" name="pass-cred-register" id="pass-cred-register" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number, one uppercase letter, and one lowercase letter. Minimum of 8 characters required!">
        </div>
        <div id="buttons-register">
            <button type="reset">Clear</button>
            <button type="submit">Register User</button>
        </div>
    </div>
</form>

<%- include("partials/footer.ejs") %>